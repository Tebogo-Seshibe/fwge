{
    "name": "fwge",
    "description": "Web based game engine library, built on top of the WebGL API",
    "private": true,
    "homepage": "https://github.com/Tebogo-Seshibe/fwge#Readme.md",
    "bugs": "https://github.com/Tebogo-Seshibe/fwge/issues",
    "author": {
        "name": "Tebogo Christopher Seshibe",
        "email": "tseshibe@gmail.com"
    },
    "repository": {
        "type": "git",
        "url": "https://github.com/Tebogo-Seshibe/fwge.git"
    },
    "scripts": {
        "build:libs": "turbo run build:lib",
        "build:apps": "turbo run build:app",
        "dev": "turbo run dev",
        "lint": "turbo run lint",
        "test": "vitest",
        "format": "prettier --write .",
        "clean": "node scripts/clean",
        "init": "node scripts/init",
        "link": "node scripts/link",
        "print": "node scripts/print",
        "play:cs-go": "cd apps/examples/cs-go && npm i && npm run dev",
        "editor": "cd apps/editor && npm i && npm run tauri"
    },
    "license": "MIT",
    "keywords": [
        "fwge",
        "webgl",
        "webgl2",
        "gamedev",
        "typescript",
        "html5",
        "game-engine",
        "game-development",
        "3d"
    ],
    "workspaces": [
        "packages/ecs",
        "packages/common",
        "packages/core",
        "packages/render",
        "packages/audio",
        "packages/input",
        "packages/physics",
        "packages/animation",
        "packages/ui",
        "packages/io"
    ],
    "devDependencies": {
        "@tauri-apps/cli": "^1.4.0",
        "@typescript-eslint/eslint-plugin": "^5.60.1",
        "@typescript-eslint/parser": "^5.60.1",
        "eslint": "^8.44.0",
        "turbo": "latest"
    },
    "packageManager": "pnpm@9.1.3",
    "engines": {
        "node": ">=14.0.0"
    }
}
