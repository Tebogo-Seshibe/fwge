{
    "compilerOptions": {
        "target": "ES6",
        "module": "ES6",
        "moduleResolution": "node",
        "esModuleInterop": true,
        "noImplicitAny": true,
        "declaration": true,
        "sourceMap": true,
        "strict": true,
        "rootDir": "./src",
        "outDir": "./build",
        "skipLibCheck": true,
        "watch": true,
        "baseUrl": "src",
        "removeComments": false,
        "paths": {
            "@atoms/*": [ "./atoms/*" ],
            "@components/*": [ "./components/*" ],
            "@ecs/*": [ "./ecs/*" ],
            "@systems/*": [ "./systems/*" ],
            "@utils/*": [ "./utils/*" ]
        }
    },
    "compileOnSave": true,
}