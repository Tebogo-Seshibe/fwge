{
    "compilerOptions": {
        "target": "es6",
        "module": "ES2015",
        "moduleResolution": "node",
        "esModuleInterop": true,
        "noImplicitAny": true,
        "declaration": true,
        "sourceMap": true,
        "strict": true,
        "rootDir": "./src",
        "outDir": "./build",
        "skipLibCheck": true,
        "watch": true,
        "baseUrl": "src",
        "paths": {
            "@core/*": [ "core" ],
            "@render/*": [ "render" ],
            "@physics/*": [ "physics" ],
            "@maths/*": [ "maths" ],
            "@audio/*": [ "audio" ],
            "@animation/*": [ "animation" ]
        }
    },
    "compileOnSave": true,

}