{
    "$schema":"https://json.schemastore.org/tsconfig",
    "compilerOptions": {
        "module": "ESNext",
        "target": "ES2018",
        "moduleResolution": "node",
        "esModuleInterop": true,
        "noImplicitAny": true,
        "declaration": true,
        "strict": true,
        "skipLibCheck": true,
        "sourceMap": true,
        "declarationMap": true,
        "removeComments": false,
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "composite": true,
        "forceConsistentCasingInFileNames": true,
        "noEmitOnError": true,
        "paths": {
            "@fwge/*": ["./packages/*/lib"]
        },
    },
    "references": [
        { "path": "packages/ecs"        },
        { "path": "packages/common"     },
        { "path": "packages/core"       },
        { "path": "packages/render"     },
        { "path": "packages/audio"      },
        { "path": "packages/input"      },
        { "path": "packages/physics"    },
        { "path": "packages/animation"  },
        { "path": "packages/ui"         },
        { "path": "packages/io"         }
    ]
}
