{
    "compilerOptions": {
        "module": "ESNext",
        "target": "ES2016",
        "moduleResolution": "node",
        "esModuleInterop": true,
        "noImplicitAny": true,
        "declaration": true,
        "strict": true,
        "skipLibCheck": true,
        "removeComments": false,
        "experimentalDecorators": true,
        "composite": true,
        "incremental": true,
        "rootDir": "./src",
        "outDir": "./lib"
    }
}
