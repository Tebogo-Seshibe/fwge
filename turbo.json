{
  "$schema": "https://turbo.build/schema.json",
  "tasks": {
    "build": {
        "dependsOn": ["^build"],
        "outputs": ["lib", "dist"]
    },
    "watch": {
      "cache": false,
      "persistent": true,
      "outputs": ["lib"]
    },
    "test": {
        "cache": false,
        "persistent": false
    },
    "dev": {
      "cache": false,
      "persistent": true,
      "outputs": ["lib"]
    },
    "clean": {
      "cache": false,
      "outputs": []
    }
  }
}
