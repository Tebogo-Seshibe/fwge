{
    "compilerOptions": {
        "target": "ES5",
        "declaration": true,
        "module": "commonjs",
        "esModuleInterop": true,
        "noImplicitAny": true,
        "experimentalDecorators": true,
        "strict": true,
        "outDir": "./lib",
        "allowJs": false,
        "watch": true
    },
    "compileOnSave": true,
    "include": [
        "./src",
    ],
    "exclude": [
        "./node_modules",
        "./dist"
    ]
}